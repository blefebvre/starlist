a
	text-decoration: none
	color: #000

.topcoat-list__item
	padding: 0
	list-style: none

.topcoat-list__item a
	display: block
	padding: 1.1rem

a.topcoat-icon-button--quiet 
	display: inline-block

li.starlist-list-item a
	padding-left: .3em

.starlist-checkbox
	margin-left: .5rem;

.topcoat-button--cta
	margin-left: 5px
	margin-top: 4px

form.login
	max-width: 19.375em /* 310 / 16 */

/* custom checkbox icon buttons */
.topcoat-icon--checkbox-unchecked
	background: url("../img/checkbox_unchecked.png") no-repeat
	-webkit-background-size: cover
	-moz-background-size: cover
	background-size: cover

.topcoat-icon--checkbox-checked
	background: url("../img/checkbox_checked.png") no-repeat
	-webkit-background-size: cover
	-moz-background-size: cover
	background-size: cover

.checkbox-fixed-box
	float: left
	width 3.7em

.list-item-fluid-box
	width: 100%
	float: left
	margin-left: -3.7em

.list-item-inner
	margin-left: 3.7em
	
.container:before, .container:after
	content:""
	display:table

.container:after
	clear:both